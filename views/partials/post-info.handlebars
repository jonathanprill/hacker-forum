<article class="post">
  <div class="title">
    <a href="{{post_body}}" target="_blank">{{title}}</a>
    <span>({{format_body post_body}})</span>
  </div>
  <div class="meta">
    {{user.username}} | {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>